{
  "name": "youtube-downloader",
  "version": "1.0.0",
  "description": "downloads video and audio stream of a youbtube video and uses FFmpeg to smush them into some ad free output",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "serve": "node --watch --inspect index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier . --write",
    "prepare": "npm run lint:fix && npm run format"
  },
  "author": "osistlk",
  "license": "MIT",
  "dependencies": {
    "@distube/ytdl-core": "^4.14.4",
    "enquirer": "^2.4.1",
    "fluent-ffmpeg": "^2.1.2",
    "koa": "^2.15.3",
    "progress": "^2.0.3",
    "sanitize-filename": "^1.6.3",
    "ytpl": "^2.3.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "3.2.5"
  }
}
